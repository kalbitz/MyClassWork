<Window x:Class="NuttinButCDs.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="407" Width="391">
    <Grid Background="Cornsilk">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="1" HorizontalAlignment="Stretch" Name="aboutTextBlock" VerticalAlignment="Stretch" MinWidth="20" MinHeight="23" Margin="12,0,10,11"  Grid.ColumnSpan="2" TextWrapping="WrapWithOverflow" Grid.RowSpan="4" />
        <StackPanel Grid.ColumnSpan="3" Grid.Row="3" HorizontalAlignment="Right" Name="buttonStackPanel" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,0,10,0">
            <Button Content="Done" Height="30" Margin="5,0,0,0" Name="doneButton" Style="{DynamicResource ButtonStyleYellowGradient}" Width="90" Click="DoneButtonClick" IsDefault="True" />
        </StackPanel>
    </Grid>
</Window>
