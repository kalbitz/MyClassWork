<Window x:Class="NuttinButCDs.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="315" Width="300">
    <Grid Background="Cornsilk">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="1" Height="145" HorizontalAlignment="Stretch" Name="aboutTextBlock" VerticalAlignment="Center" MinWidth="20" MinHeight="23" Margin="12,1,10,8"  Grid.ColumnSpan="2" />
        <StackPanel Grid.ColumnSpan="3" Grid.Row="3" HorizontalAlignment="Right" Name="buttonStackPanel" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,0,10,0">
            <Button Content="Done" Height="30" HorizontalAlignment="Center" Margin="5,0,0,0" Name="doneButton" Style="{DynamicResource ButtonStyleYellowGradient}" VerticalAlignment="Center" Width="90" Click="DoneButtonClick" />
        </StackPanel>
    </Grid>
</Window>
